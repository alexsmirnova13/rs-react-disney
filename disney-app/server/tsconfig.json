{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "outDir": "../dist",
        "baseUrl": "./",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
    },
      "include": [
        "app.ts",
      ],
  }
  